<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_display_details_margin">
    <RelativeLayout
        android:id="@+id/content_legislator_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="edu.usc.a_karmakar.congress_lookup_hw9.LegislatorDetailActivity"
        tools:showIn="@layout/activity_legislator_detail">
        <LinearLayout
            android:id="@+id/link_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="3" />
            <ImageView
                android:id="@+id/fav_button_legs"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:clickable="true"
                android:onClick="addFavorite"
                android:src="@drawable/ic_inactive_star"
                />
            <ImageView
                android:id="@+id/fb_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/f"
                android:onClick="openFacebook"
                />
            <ImageView
                android:id="@+id/tw_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="openTwitter"
                android:src="@drawable/t"/>
            <ImageView
                android:id="@+id/web_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="openWebsite"
                android:src="@drawable/w"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/legs_face"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/link_bar"
            android:layout_marginTop="30sp"/>

        <LinearLayout
            android:id="@+id/party_info_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/legs_face"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp">
            <ImageView
                android:id="@+id/legs_party_logo"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/legs_party_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_below="@id/party_info_holder"
            android:textSize="30sp">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp" >
                <TextView
                    android:text="@string/detail_leg_name_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:textStyle="bold"
                    android:textSize="@dimen/table_text"
                    android:textColor="@color/legNameBlack"
                    />
                <TextView
                    android:id="@+id/legs_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:gravity="right"
                    android:textSize="@dimen/table_text"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                >
                <TextView
                    android:text="@string/detail_leg_email_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:padding="@dimen/table_text_padding"
                    android:textStyle="bold"
                    android:textSize="@dimen/table_text"
                    android:textColor="@color/legNameBlack"
                    />
                <TextView
                    android:id="@+id/legs_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:padding="@dimen/table_text_padding"
                    android:gravity="right"
                    android:textSize="@dimen/table_text"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                >
                <TextView
                    android:text="@string/detail_chamb_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:textStyle="bold"
                    android:textSize="@dimen/table_text"
                    android:textColor="@color/legNameBlack"
                    />
                <TextView
                    android:id="@+id/legs_chamber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:gravity="right"
                    android:textSize="@dimen/table_text"
                />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                >
                <TextView
                    android:text="@string/detail_leg_phone_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:textStyle="bold"
                    android:textSize="@dimen/table_text"
                    android:textColor="@color/legNameBlack"
                    />
                <TextView
                    android:id="@+id/legs_contact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:gravity="right"
                    android:textSize="@dimen/table_text"
                />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                >
                <TextView
                    android:text="@string/detail_leg_sterm_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:textStyle="bold"
                    android:textSize="@dimen/table_text"
                    android:textColor="@color/legNameBlack"
                    />
                <TextView
                    android:id="@+id/legs_start_term"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:gravity="right"
                    android:textSize="@dimen/table_text"
/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                >
                <TextView
                    android:text="@string/detail_leg_eterm_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:textStyle="bold"
                    android:textSize="@dimen/table_text"
                    android:textColor="@color/legNameBlack"
                />
                <TextView
                    android:id="@+id/legs_end_term"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:gravity="right"
                    android:textSize="@dimen/table_text"
                />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                >
                <TextView
                    android:text="@string/detail_leg_term_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:textStyle="bold"
                    android:textSize="@dimen/table_text"
                    android:textColor="@color/legNameBlack"
                />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5">
                    <ProgressBar
                        android:id="@+id/legs_term_progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@android:style/Widget.ProgressBar.Horizontal" />
                    <TextView
                        android:id="@+id/legs_progress_label"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_alignLeft="@+id/legs_term_progress"
                        android:layout_alignTop="@+id/legs_term_progress"
                        android:layout_alignRight="@+id/legs_term_progress"
                        android:layout_alignBottom="@+id/legs_term_progress"/>
                </RelativeLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                >
                <TextView
                    android:text="@string/detail_leg_office_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:textStyle="bold"
                    android:textSize="@dimen/table_text"
                    android:textColor="@color/legNameBlack"
                />
                <TextView
                    android:id="@+id/legs_office"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:gravity="right"
                    android:textSize="@dimen/table_text"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                >
                <TextView
                    android:text="@string/detail_leg_state_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:textStyle="bold"
                    android:textSize="@dimen/table_text"
                    android:textColor="@color/legNameBlack"
                    />
                <TextView
                    android:id="@+id/legs_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:gravity="right"
                    android:textSize="@dimen/table_text"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                >
                <TextView
                    android:text="@string/detail_leg_fax_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:textStyle="bold"
                    android:textSize="@dimen/table_text"
                    android:textColor="@color/legNameBlack"
                    />
                <TextView
                    android:id="@+id/legs_fax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:gravity="right"
                    android:textSize="@dimen/table_text"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                >
                <TextView
                    android:text="@string/detail_leg_bday_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:textStyle="bold"
                    android:textSize="@dimen/table_text"
                    android:textColor="@color/legNameBlack"
                    />
                <TextView
                    android:id="@+id/legs_birthday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/table_text_padding"
                    android:gravity="right"
                    android:textSize="@dimen/table_text"
                    />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</ScrollView>
