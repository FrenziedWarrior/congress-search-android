<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/gradient_bg">
    <LinearLayout
        android:id="@+id/text_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_comm_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/legNameBlack"
            android:textSize="@dimen/bill_id_size"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/tv_comm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textColor="@color/darkerText"
            />
        <TextView
            android:id="@+id/tv_comm_chamber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textColor="@color/darkerText"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/right_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_right_arrow"
        android:layout_toRightOf="@+id/text_holder"
        />
</RelativeLayout>